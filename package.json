{
  "name": "pretty-commitizen",
  "displayName": "pretty-commitizen",
  "repository": {
    "type": "git",
    "url": "https://github.com/mooujarrar/pretty-commitizen.git"
  },
  "bugs": {
    "url": "https://github.com/mooujarrar/pretty-commitizen/issues",
    "email": "mohyiddineoujarrar@gmail.com"
  },
  "homepage": "https://github.com/mooujarrar/pretty-commitizen/blob/main/README.md",
  "author": {
    "name": "Mohyiddine Oujarrar (https://mooujarrar.github.io/)"
  },
  "description": "This is the ultimate extension to make your commit messages the prettiest ever.",
  "publisher": "mooujarrar",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "pricing": "Free",
  "license": "SEE LICENSE IN LICENSE",
  "icon": "assets/logo_square.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pretty-commitizen.run",
        "title": "Run Pretty Commitizen",
        "icon": "assets/icon.png"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pretty-commitizen-container",
          "title": "Pretty Commitizen",
          "icon": "assets/icon.png"
        }
      ]
    },
    "views": {
      "pretty-commitizen-container": [
        {
          "type": "webview",
          "icon": "assets/icon.png",
          "id": "pretty-commitizen.launcher",
          "name": "Pretty Commitizen"
        }
      ]
    },
    "configuration": {
      "title": "Pretty Commitizen Configuration",
      "type": "object",
      "properties": {
        "pretty-commitizen.reviewers": {
          "type": "array",
          "description": "List of reviewers to display in the dropdown.",
          "default": [
            {
              "name": "Alice",
              "value": "alice"
            },
            {
              "name": "Bob",
              "value": "bob"
            }
          ],
          "items": {
            "properties": {
              "name": {
                "type": "string",
                "description": "The display name shown in the list"
              },
              "value": {
                "type": "string",
                "description": "The actual value inserted into the commit message"
              }
            }
          }
        },
        "pretty-commitizen.issue-prefix": {
          "type": "string",
          "default": "JIRA",
          "description": "Prefix to be added to the issue number in the commit message (Suffix: JIRA, Issue Nr: 214, Result: JIRA-214)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.x",
    "@types/vscode": "^1.103.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
